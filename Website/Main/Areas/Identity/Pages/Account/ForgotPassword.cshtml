@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="row bg-white">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h1 style="text-align: center">@ViewData["Title"]</h1>
        <h2>We get it, sometimes you forget things, but thats okay!</h2>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary" style=" font-size: 20px; border: 2px solid #101010 ;background-color: #181818; color: white">Reset Password</button>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
