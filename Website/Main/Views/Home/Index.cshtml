

@section Banner {
<div class="row">
    <div class="col bg-semi px-4 py-2 m-4">
        <h2>Welcome to Slice of Pi Real Estate</h2>
        <p id="message">This is life of Pi bringing you a centralized research application. Be informed about the kind of community you may end up belonging to.</p>
    </div>
</div>
}

<section class="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="owl-service-item owl-carousel">
                    <div class="item">
                        <div class="icon">
                            <img src="assets/images/service-icon-01.png" alt="">
                        </div>
                        <div class="down-content">
                            <h4>Get Crime Rates by State</h4>
                            <p>Find out what kind of crime the state you may live in experiences.</p>
                        </div>
                    </div>
                    <div class="item">
                        <div class="icon">
                            <img src="assets/images/service-icon-01.png" alt="">
                        </div>
                        <div class="down-content">
                            <h4>City Crime Rates</h4>
                            <p>See what kind of crimes are common in your city of interest.</p>
                        </div>
                    </div>
                    <div class="item">
                        <div class="icon">
                            <img src="assets/images/service-icon-01.png" alt="">
                        </div>
                        <div class="down-content">
                            <h4>Register</h4>
                            <p>Like what you see? Register for an account using the register link above!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="our-courses" id="courses">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h2>Our Top Community Picks @Html.Tooltip("Select the text of a city below to see its crime statistics!")</h2>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="owl-courses-item owl-carousel">
                    <!--change from recommended to higlighted-->
                    <!--cache data and make it load randomly-->
                    <!--make an admin page to change highlights with out bring the site down-->
                    <!--hyrbid ticketing service for managing user submissions-->
                    <form action="Crime/CrimeStats" method="get">
                        <input hidden type="text" id="cityName" name="cityName" value="Lake Oswego" required>
                        <select hidden name="stateAbbrev" id="stateAbbrev" value="OR">
                            <option value="OR"></option>
                        </select>
                        <div class="item">
                            <img src="assets/images/course-01.jpg" alt="Course One" width="400" height="200">
                            <div class="down-content">
                                <input id="Lake Oswego, OR" class="IvansText" type="submit" value="Lake Oswego, OR">
                            </div>
                        </div>
                    </form>

                    <form action="Crime/CrimeStats" method="get">
                        <input hidden type="text" id="cityName" name="cityName" value="Sedona" required>
                        <select hidden name="stateAbbrev" id="stateAbbrev" value="AZ">
                            <option value="AZ"></option>
                        </select>
                        <div class="item">
                            <img src="assets/images/course-02.jpg" alt="Course Two" width="400" height="200">
