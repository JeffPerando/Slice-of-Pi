@using Microsoft.AspNetCore.Identity
@inject ISiteUserService Users

@if (Users.IsLoggedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-item dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
            Hello, @Users.Name(User)!
        </a>
        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdownMenuLink">
            <li><a class="dropdown-item" href="/User/Edit">My Info</a></li>
            <li><a class="dropdown-item" href="/User/Assessments">My Assessments</a></li>
            <li><a class="dropdown-item" href="/User/Searches">My Searches</a></li>
        </ul>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-light">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
}
